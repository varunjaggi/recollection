<h3> Dashboard</h3>
<p> Here are your memories {{name}}</p>


{{#if stories}}
    <table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/memory/{{_id}}">{{caption}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}

    <p>Nos tory</p>
{{/if}}