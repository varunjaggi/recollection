<h4>Tell us your Beautiful Memory</h4>
<div class="row">
    <form action="/memory" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="caption" name="caption">
                <label for="title">Memory</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <br><br>

        <div class="row">
                <div> 
                <label for="image">Upload your memory</label><br> 
                <input type="file" id="img" 
                       name="img" value=""> 
            </div> 
        </div>

         <div class="row">
                <div> 
                <label for="image">Date</label> 
                <input type="date" id="date" 
                       name="date" value=""> 
            </div> 
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn red">Cancel</a>
        </div>
    </form>
</div>
